<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_crm_lead_reassign_wizard_form" model="ir.ui.view">
        <field name="name">crm.lead.reassign.wizard.form</field>
        <field name="model">crm.lead.reassign.wizard</field>
        <field name="arch" type="xml">
            <form string="Reassign Leads">
                <sheet>
                    <group>
                        <field name="reassign_type" widget="radio" 
                               options="{'horizontal': true}" 
                               attrs="{'invisible': [('result', '!=', False)]}"/>
                        <field name="result" attrs="{'invisible': [('result', '=', False)]}" style="white-space: pre-wrap;"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Reassign" name="action_reassign" type="object" 
                            class="btn-primary" attrs="{'invisible': [('result', '!=', False)]}"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_crm_lead_reassign_wizard" model="ir.actions.act_window">
        <field name="name">Reassign Leads</field>
        <field name="res_model">crm.lead.reassign.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="crm.model_crm_lead"/>
        <field name="binding_view_types">list</field>
        <field name="binding_domain">[('type', '=', 'lead')]</field>
        <field name="groups_id" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
    </record>
</odoo>
